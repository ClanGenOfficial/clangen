{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Serve Web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/utils/web.py",
            "args": [
                "serve"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Serve Web (No Pack)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/utils/web.py",
            "args": [
                "serve", "--no-pack"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}